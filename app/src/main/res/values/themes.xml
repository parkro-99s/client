<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Client" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/parkro_navy</item>
        <item name="colorPrimaryVariant">@color/parkro_black</item>
        <item name="colorOnPrimary">@color/parkro_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/parkro_orange</item>
        <item name="colorSecondaryVariant">@color/parkro_gray</item>
        <item name="colorOnSecondary">@color/parkro_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/parkro_navy</item>
        <item name="android:textColor">@color/parkro_white</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/parkro_white</item>
        <item name="android:textColor">@color/parkro_navy</item>
    </style>
</resources>
